<?xml version="1.0" encoding="utf-8"?>

<template xml:space="preserve">
    <t t-name="kltn.HrAttendanceMode">
        <div class="app__container">
            <div class="modal">
                <div class="modal__overlay"></div>
                <div class="modal__body">

                    <!-- form check in -->
                    <div class="check-form">
                        <div class="check-form__container">
                            <div class="check-form__header">
                                <img class="check-form__image" src="kltn/static/src/assets/img/avatar_1.jpg"></img>
                            </div>
                            <div class="check-form__form">
                                <h1 class="check-form__name">Mitchell Admin</h1>
                                <h3 class="check-form__label">Welcome!</h3>
                                <a href="" class="check-form__icon fa-solid fa-right-to-bracket"></a>
                                <h3 class="check-form__checkin">
                                    Click to
                                    <b>check in</b>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <xpath expr="." position="inside">
                <link rel="preconnect" href="https://fonts.googleapis.com" />
                <link rel="preconnect" href="https://fonts.gstatic.com" />
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
                <link rel="stylesheet" href="kltn/static/src/assets/css/responsive.css" />
                <link rel="stylesheet" href="kltn/static/src/assets/css/grid.css" />
                <link rel="stylesheet" href="kltn/static/src/assets/css/base.css" />
                <link rel="stylesheet" href="kltn/static/src/assets/css/attendance_main.css" />
                <link rel="stylesheet" href="kltn/static/src/assets/css/main.css" />

            </xpath>
