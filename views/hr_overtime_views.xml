<odoo>
    <record id="hr_overtime_request_view_form" model="ir.ui.view">
        <field name="name">hr.overtime.request.view.form</field>
        <field name="model">hr.overtime.request</field>
        <field name="priority">32</field>
        <field name="arch" type="xml">
            <form string="Overtime Request">
                <header>    
                    <!-- <field name="show_button_approve" invisible="1"/>    
                    <field name="show_button_validate" invisible="1"/>
                    <button string="Confirm" name="action_confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Approve" name="action_approve" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'approve'), ('show_button_approve', '=', False)]}"/>
                    <button string="Validate" name="action_validate" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'second_approve'), ('show_button_validate', '=', False)]}"/>
                    <button string="Refuse" name="action_refuse" type="object" attrs="{'invisible': [('state', 'not in', ('validate', 'approve', 'second_approve'))]}"/>
                    <button string="Mark as Draft" name="action_draft" type="object" attrs="{'invisible': [('state', '!=', 'refuse')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approve,second_approve,validate"/> -->
                </header>
                <sheet>
                    <div>
                        <field name="name"></field>
                    </div>
                    <group>
                        <group name="col_left">
                            <field name="date"/>
                            <field name="request_hour_from"/>
                            <field name="request_hour_to"/>
                            <field name="number_of_hours"/>
                        </group>
                        <group name="col_right">
                            <field name="target"/>
                            <field name="employee_id"/>
                            <field name="employee_ids" widget="many2many_tags"/>
                            <field name="department_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'always'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_overtime_request_tree_view" model="ir.ui.view">
        <field name="name">overtime.request.tree.view</field>
        <field name="model">hr.overtime.request</field>
        <field name="arch" type="xml">
            <tree string="Overtime Request">
                <field name="name"/>
                <field name="date" widget='float_time'/>
                
                <field name="number_of_hours" widget='float_time'/>
            </tree>
        </field>
    </record>

    <record id="hr_overtime_request_action" model="ir.actions.act_window">
        <field name="name">Overtime Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.overtime.request</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_overtime_request_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hr_overtime_request_view_form')})]"/>
    </record>
</odoo>
