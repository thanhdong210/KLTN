        <field name="model">hr.benefit</field>
        <field name="priority">32</field>
        <field name="arch" type="xml">
            <form string="Benefit">
                <sheet>
                    <group>
                        <group name="col_left">
                            <field name="name"/>
                            <field name="price"/>
                        </group>
